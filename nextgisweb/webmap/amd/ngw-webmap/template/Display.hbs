<div
    data-dojo-type="${baseClass}"
    data-dojo-attach-point="focusNode"
    style="width: 100%; height: 100%"
>
    <div
        data-dojo-attach-point="mainContainer"
        class="main-container"
        data-dojo-type="dijit/layout/BorderContainer"
        data-dojo-props="gutters: false"
        style="width: 100%; height: 100%;"
    >
        <div
            data-dojo-attach-point="mapContainer"
            class="map-container"
            data-dojo-type="dijit/layout/BorderContainer"
            data-dojo-props="region: 'center', gutters: false"
            style="padding-left: 0;"
        >
            <div
                data-dojo-attach-point="mapPane"
                data-dojo-type="dijit/layout/ContentPane"
                data-dojo-props="region: 'center'"
                style="width: 100%; padding: 0;"
            >
                <div
                    data-dojo-attach-point="mapNode"
                    style="position: absolute; width: 100%; height: 100%; padding: 0;"
                >
                    <div
                        data-dojo-attach-point="leftTopControlPane"
                        class="control-pane control-pane--top control-pane--left"
                    ></div>
                    <div
                        data-dojo-attach-point="leftBottomControlPane"
                        class="control-pane control-pane--bottom control-pane--left"
                    ></div>
                    <div
                        data-dojo-attach-point="rightTopControlPane"
                        class="control-pane control-pane--top control-pane--right"
                    ></div>
                    <div
                        data-dojo-attach-point="rightBottomControlPane"
                        class="control-pane control-pane--bottom control-pane--right"
                    ></div>
                </div>
            </div>
        </div>
        <div
            data-dojo-attach-point="navigationMenuPane"
            class="navigation-menu-pane"
            data-dojo-type="dijit/layout/ContentPane"
            data-dojo-props="region: 'left'"
            style="padding: 0;"
        ></div>
    </div>
</div>