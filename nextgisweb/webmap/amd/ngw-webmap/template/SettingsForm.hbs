<div data-dojo-type="${baseClass}" data-dojo-attach-point="focusNode">

    <div data-dojo-type="dijit/layout/BorderContainer"
        data-dojo-props="gutters: false"
        style="width: 100%; height: 550px">

        <div data-dojo-type="dojox/layout/TableContainer" data-dojo-props="region: 'top', cols:2, labelWidth: 120">

            <h3>{{gettext 'Identify popup'}}</h3>

            <div data-dojo-attach-point="wPopupWidth"
                data-dojo-type="dijit/form/NumberTextBox"
                data-dojo-props="constraints: {min: 1, places: 0}, trim: true"
                title="{{gettext 'Width, px'}}" style="width: 100%"></div>

            <div data-dojo-attach-point="wPopupHeight"
                data-dojo-type="dijit/form/NumberTextBox"
                data-dojo-props="constraints: {min: 1, places: 0}, trim: true"
                title="{{gettext 'Height, px'}}" style="width: 100%"></div>

            <div data-dojo-attach-point="wIdentifyRadius"
                data-dojo-type="dijit/form/NumberTextBox"
                data-dojo-props="constraints: {min: 0, places: 0}, trim: true"
                title="{{gettext 'Radius, px'}}" style="width: 100%"></div>

            <div data-dojo-attach-point="wIdentifyAttributes"
                data-dojo-type="dijit/form/CheckBox"
                title="{{gettext 'Show feature attributes'}}"></div>
        </div>

        <div data-dojo-type="dojox/layout/TableContainer" data-dojo-props="region: 'top', cols:2, labelWidth: 120">

            <h3>{{gettext 'Measurement'}}</h3>

            <select data-dojo-type="dijit/form/Select"
                data-dojo-attach-point="wUnitsLength"
                title="{{gettext 'Length units'}}" style="width: 100%">
                <option value="m" selected="selected">{{gettext 'Meters'}}</option>
                <option value="km">{{gettext 'Kilometers'}}</option>
                <option value="metric">{{gettext 'Meters/kilometers (auto)'}}</option>
                <option value="ft">{{gettext 'Feet'}}</option>
                <option value="mi">{{gettext 'Miles'}}</option>
                <option value="imperial">{{gettext 'Feet/miles (auto)'}}</option>
            </select>

            <select data-dojo-type="dijit/form/Select"
                data-dojo-attach-point="wUnitsArea"
                title="{{gettext 'Area units'}}" style="width: 100%">
                <option value="sq_m" selected="selected">{{gettext 'Sq. meters'}}</option>
                <option value="sq_km">{{gettext 'Sq. kilometers'}}</option>
                <option value="metric">{{gettext 'Sq. meters/kilometers (auto)'}}</option>
                <option value="ha">{{gettext 'Hectares'}}</option>
                <option value="ac">{{gettext 'Acres'}}</option>
                <option value="sq_mi">{{gettext 'Sq. miles'}}</option>
                <option value="imperial">{{gettext 'Acres/sq. miles (auto)'}}</option>
                <option value="sq_ft">{{gettext 'Sq. feet'}}</option>
            </select>

            <select data-dojo-type="dijit/form/Select"
                data-dojo-attach-point="wDegreeFormat"
                title="{{gettext 'Degree format'}}" style="width: 100%">
                <option value="dd" selected="selected">{{gettext 'Decimal degrees'}}</option>
                <option value="ddm">{{gettext 'Degrees, decimal minutes'}}</option>
                <option value="dms">{{gettext 'Degrees, minutes, seconds'}}</option>
            </select>

            <select data-dojo-type="dijit/form/Select"
                data-dojo-attach-point="wMeasurementSRID"
                title="{{gettext 'Measurement SRID'}}" style="width: 100%">
            </select>

        </div>

        <div data-dojo-type="dojox/layout/TableContainer" data-dojo-props="region: 'top', cols:1, labelWidth: 300">

            <h3>{{gettext 'Address search'}}</h3>

            <div data-dojo-attach-point="wAddressEnabled"
                 data-dojo-type="dijit/form/CheckBox"
                 title="{{gettext 'Enable'}}"></div>

            <div data-dojo-attach-point="wAddressExtent"
                 data-dojo-type="dijit/form/CheckBox"
                 title="{{gettext 'Limit by web map initial extent'}}"></div>

            <select data-dojo-type="dijit/form/Select"
                    data-dojo-attach-point="wAddressGeocoder"
                    title="{{gettext 'Provider'}}" style="width: 100%">
                <option value="nominatim" selected="selected">{{gettext 'Nominatim (OSM)'}}</option>
                <option value="yandex">{{gettext 'Yandex.Maps API Geocoder'}}</option>
            </select>

            <div data-dojo-attach-point="wYandexApiGeocoderKey"
                data-dojo-type="dijit/form/TextBox"
                data-dojo-props="trim: true"
                title="{{gettext 'Yandex.Maps API Geocoder Key'}}" style="width: 100%"></div>

        </div>

        <div data-dojo-type="dijit/layout/ContentPane"
            data-dojo-props="region: 'bottom'"
            style="padding: 1em 0;">
            <button data-dojo-type="dijit/form/Button" 
                data-dojo-attach-point="buttonSave"
                class="dijitButton--primary">{{gettext 'Save'}}</button>
        </div>

    </div> 

</div>
